	margin-left : 5%;
	margin-right : 5%;
}


.navbar {
	margin-bottom: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-left: 0px;
}

.navbar-inner {
	padding-left: 20px;
}

.carousel {
	/* position: absolute; */
	position: relative;
	top: 0px;
	left: 0px;
	/*margin-left: -20px;
	margin-right: -20px; */
	right: 0px;
	overflow: hidden;

}
.carousel-caption {
	color: #ffffff;
	text-shadow: 0 2px 2px rgba(0,0,0,.8);
	background: rgba(0, 0, 0, 0.5);
	padding: 5px;
}

.container-fluid {
	padding-left: 0px;
}

.image_resize{
	height: 300px;
	width: 100%;
	background-size: cover;
}

@media screen and (max-width: 420px) {
	a.btn.btn-large.lead {
		font-size: 17px;
	}
	a.btn.btn-large {
		padding: 9px 18px;
	}

	.navbar .nav > li > a {
		padding: 15px 5px 5px;
	}

	h1 {
		font-size: 30px;
		line-height: 24px;
	}

	.navbar-inner {
		padding-left: 0px;
		padding-right: 0px;
	}

	.image_resize {
		height: 100px;
	}

	.textintro {
		padding: 5px;
	}
}


