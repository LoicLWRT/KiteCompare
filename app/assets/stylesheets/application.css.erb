body {
	padding-top: 70px;
	padding-bottom: 40px;
	padding-left:20px;
	padding-right:20px;
}

.navbar-inner {
	border-radius: 0px !important;
	padding-left: 0;
}

[class^="icon-"],
[class*=" icon-"] {
	background-image: url(<%= asset_path 'glyphicons-halflings.png' %>);
}

.icon-white {
	background-image: url(<%= asset_path 'glyphicons-halflings-white.png' %>);
}

.center { 
	float: none; margin-left: auto; margin-right: auto; 
}

.justify {
	text-align: justify;
}

.lead {
	font-size: 20px;
}

@media screen and (max-width: 420px) {
	a.btn.btn-large.lead {
		font-size: 17px;
	}
	a.btn.btn-large {
		padding: 9px 18px;
	}
	
	.navbar .nav > li > a {
	padding: 15px 5px 5px;
	}
	
	h1 {
	font-size: 30px;
	line-height: 24px;
	}
	
}