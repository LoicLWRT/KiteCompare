body {
	padding-bottom: 40px;
	padding-left:0px;
	padding-right:0px;

	
	background-image:url('bg.png');
	background-repeat:repeat; 
	background-color: #f6f6f6;


}

.navbar-inner {
	border-radius: 0px !important;
	padding-left: 0;
}

[class^="icon-"],
[class*=" icon-"] {
	background-image: url(<%= asset_path 'glyphicons-halflings.png' %>);
}

.icon-white {
	background-image: url(<%= asset_path 'glyphicons-halflings-white.png' %>);
}

.center { 
	float: none; margin-left: auto; margin-right: auto; 
}

.justify {
	text-align: justify;
}

.lead {
	font-size: 20px;
}

.footer_text{
	font-size: 12px;
	margin-left : 5%;
	margin-right : 5%;
}

@media screen and (max-width: 420px) {
	a.btn.btn-large.lead {
		font-size: 17px;
	}
	a.btn.btn-large {
		padding: 9px 18px;
	}
	
	.navbar .nav > li > a {
	padding: 15px 5px 5px;
	}
	
	h1 {
	font-size: 30px;
	line-height: 24px;
	}
	
}


.navbar {
	margin-bottom: 0px;
	margin-top: 0px;
	margin-right: 0px;
	margin-left: 0px;
}

.navbar-inner {
	padding-left: 20px;
}

