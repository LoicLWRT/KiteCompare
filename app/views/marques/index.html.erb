<h1>Listing marques</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @marques.each do |marque| %>
      <tr>
        <td><%= marque.name %></td>
        <td><%= link_to 'Show', marque %></td>
        <td><%= link_to 'Edit', edit_marque_path(marque) %></td>
        <td><%= link_to 'Destroy', marque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

