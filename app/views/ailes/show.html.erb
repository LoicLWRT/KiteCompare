<p id="notice"><%= notice %></p>

<p>
  <strong>Marque:</strong>
  <%= Marque.find(@aile.marque_id).name %>
</p>

<p>
  <strong>Modèle:</strong>
  <%= @aile.modele %>
</p>

<p>
  <strong>Année:</strong>
  <%= @aile.annee %>
</p>

<% @image_url = Marque.find(@aile.marque_id).name + "_" + @aile.modele + "_" + @aile.annee.to_s() %>
<% @image_url = "kites/" + @image_url.downcase.delete(' ').delete('.') + "-small.jpg" %>
<% if  Rails.application.assets.find_asset(@image_url).nil? then @image_url="kites/base-small.jpg"  end%>
<%= image_tag @image_url %>

<p>
  <strong>Prix neuf:</strong>
  <%= @aile.prix_neuf %>
</p>

<p>
  <strong>Prix occasion:</strong>
  <%= @aile.prix_occasion %>
</p>

<p>
  <strong>Avantages:</strong>
  <%= simple_format(@aile.description_avantages).html_safe %>
</p>

<p>
  <strong>Inconvénients:</strong>
  <%= simple_format(@aile.description_inconvenients).html_safe %>
</p>

<%= link_to 'Edit', edit_aile_path(@aile) %> |
<%= link_to 'Back', ailes_path %>
