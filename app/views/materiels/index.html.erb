<h1>Listing materiels</h1>

<table>
  <thead>
    <tr>
      <th>Type | </th>
      <th>Modèle | </th>
      <th>Marque | </th>
      <th>Année | </th>
      <th>Image | </th>
      <th>Prix | </th>
      <th>Prix d'occasion | </th>
      <th>Avantages | </th>
      <th>Inconvénients | </th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @materiels.each do |materiel| %>
      <tr>
        <td><%= materiel.materieltype_id %></td>
        <td><%= materiel.modele %></td>
        <td><%= materiel.marque_id %></td>
        <td><%= materiel.annee %></td>
        <td><%= materiel.url_image %></td>
        <td><%= materiel.prix_neuf %></td>
        <td><%= materiel.prix_occasion %></td>
        <td><%= materiel.description_avantages %></td>
        <td><%= materiel.description_inconvenients %></td>
        <td><%= link_to 'Show', materiel %></td>
        <td><%= link_to 'Edit', edit_materiel_path(materiel) %></td>
        <td><%= link_to 'Destroy', materiel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

